[core]
	editor = vim
	autocrlf = false
[push]
	default = current
[pull]
	default = current
	ff = only
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	keepbackup = false
[commit]
	gpgsign = true
[rerere]
	enabled = true
[alias]
	diffi = diff --cached
	heads = for-each-ref --format='%(refname:short) - %(subject)' refs/heads
	ll = "!f(){ git log $(git merge-base master ${1-@})..${@-@};};f"
	ls = log --oneline
	name = "!f(){ basename `git rev-parse --show-toplevel`; git $@; echo;};f"
	npm = !npm

